{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react-jsx",
        "strict": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7"
        ]
    },
    "exclude": [
        "node_modules",
        "test",
        "coverage",
        "backups",
        ".git"
    ],
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ]
}